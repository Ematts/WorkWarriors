@model WorkWarriors.Models.CompletedBids

@{
    ViewBag.Title = "Add_Review";
}

<h2>Add_Review</h2>

@using (Html.BeginForm("Edit", "CompletedBids"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CompletedBids</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.ConUsername)
        @Html.HiddenFor(model => model.HomeUsername)
        @Html.HiddenFor(model => model.ConFirstName)
        @Html.HiddenFor(model => model.HomeFirstname)
        @Html.HiddenFor(model => model.ConLastName)
        @Html.HiddenFor(model => model.HomeLastName)
        @Html.HiddenFor(model => model.ConAddress)
        @Html.HiddenFor(model => model.HomeAddress)
        @Html.HiddenFor(model => model.ConCity)
        @Html.HiddenFor(model => model.HomeCity)
        @Html.HiddenFor(model => model.ConState)
        @Html.HiddenFor(model => model.HomeState)
        @Html.HiddenFor(model => model.ConZip)
        @Html.HiddenFor(model => model.HomeZip)
        @Html.HiddenFor(model => model.ConEmail)
        @Html.HiddenFor(model => model.HomeEmail)
        @Html.HiddenFor(model => model.PostedDate)
        @Html.HiddenFor(model => model.Bid)
        @Html.HiddenFor(model => model.CompletionDeadline)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.Completed)
        @Html.HiddenFor(model => model.Invoice)
        @Html.HiddenFor(model => model.Service_Number)
        @Html.HiddenFor(model => model.ContractorDue)
        @Html.HiddenFor(model => model.ContractorPaid)
        @Html.HiddenFor(model => model.Expired)


        <div class="form-group">
            @Html.LabelFor(model => model.Review, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Review, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Review, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
